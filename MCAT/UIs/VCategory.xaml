<Page x:Class="MCAT.UIs.VCategory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MCAT.UIs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VCategory">

    <Grid Background="White">
        <Grid Margin="10,30">
            <Grid.RowDefinitions>
                <RowDefinition Height = "Auto" />
                <RowDefinition Height = "Auto" />
                <RowDefinition Height = "Auto" />
                <RowDefinition Height = "Auto" />
                <RowDefinition Height = "Auto" />
                <RowDefinition Height = "Auto" />
                <RowDefinition Height = "*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "Auto" />
                <ColumnDefinition Width = "200" />
            </Grid.ColumnDefinitions>


            <Label Name = "LblName" Margin = "2">Category Name:</Label>
            <TextBox Name = "TxtName" Grid.Column = "1" Margin = "2" 
         Text = "{Binding Catname, Mode = TwoWay}"/>

            <Label Name = "LblId" Margin = "2" Grid.Row = "1">Category ID:</Label>
            <TextBox Name = "TxtId" Grid.Column = "1" Grid.Row = "1" Margin = "2" 
         Text = "{Binding Id, Mode = TwoWay}"/>

            <Label Name = "LblPcapacity" Margin = "2" Grid.Row = "2">Passanger Capacity:</Label>
            <TextBox Name = "TxtPcapacity" Grid.Column = "1" Grid.Row = "2" Margin = "2" 
         Text = "{Binding Pcapacity, Mode = TwoWay}"/>

            <Label Name = "LblAvaivehicles" Margin = "2" Grid.Row = "3">No. of available vehicles:</Label>
            <TextBox Name = "TxtAvaivehicles" Grid.Column = "1" Grid.Row = "3" Margin = "2" 
         Text = "{Binding Avaivehicles, Mode = TwoWay}"/>

            <Label Name = "LblCostonekm" Margin = "2" Grid.Row = "4">Cost per 1Km:</Label>
            <TextBox Name = "TxtCostonekm" Grid.Column = "1" Grid.Row = "4" Margin = "2" 
         Text = "{Binding Costonekm, Mode = TwoWay}"/>

            <Label Name = "LblCostoneday" Margin = "2" Grid.Row = "5">Cost per Day:</Label>
            <TextBox Name = "TxtCostoneday" Grid.Column = "1" Grid.Row = "5" Margin = "2" 
         Text = "{Binding Costoneday, Mode = TwoWay}"/>
        </Grid>
    </Grid>
</Page>

      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MCAT.UIs"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      Height="650" Width="1250"
      Title="Dashboard">

    <Grid Background="White">
        <Grid Margin="0,0,536,0">

            <Label Content="Saturday 8/28/2021" HorizontalAlignment="Left" Margin="27,47,0,0" VerticalAlignment="Top" Width="233" Height="38" FontSize="18"/>

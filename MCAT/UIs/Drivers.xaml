<Page x:Class="MCAT.UIs.Drivers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MCAT.UIs"
      mc:Ignorable="d" 
      Height="650" Width="1250"
      Title="Drivers">

    <Grid Background="white">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="DataGridDrivers" Grid.Row="1" Margin="20,20,20,20" IsReadOnly="True" CanUserAddRows="False" ColumnHeaderHeight="40" HeadersVisibility="Column">
            <DataGrid.BindingGroup>
                <BindingGroup/>
            </DataGrid.BindingGroup>

        </DataGrid>
        <Button Style="{StaticResource MaterialDesignFlatLightBgButton}"
                Content="Add a new Driver" Margin="1016,54,20,44"
                Width="200" Click="OpenAddDriver"
                />

    </Grid>
</Page>
